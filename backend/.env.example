# ===========================================
# PolicyLens Configuration Template
# ===========================================
# Copy this file to .env and fill in your values
# System works without API keys using local models

# API Keys (Optional - system works without these)
# ================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key_here

# Milvus Vector Database Configuration
# =====================================
MILVUS_HOST=localhost
MILVUS_PORT=19530
# For Docker: Use 'milvus' as host when running in containers
# For Local: Use 'localhost' when running backend locally

# Embedding Model Configuration
# ==============================
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Options:
# - all-MiniLM-L6-v2 (local, free, 384 dimensions)
# - text-embedding-3-small (OpenAI, requires API key)
# - text-embedding-3-large (OpenAI, requires API key)

# LLM Configuration
# =================
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
MAX_TOKENS=2000
# Fallback: System uses rule-based analysis if no API key

# Application Configuration
API_PORT=8000
CHUNK_SIZE=600
CHUNK_OVERLAP=100
TOP_K_RESULTS=5

# Risk Scoring Thresholds
HIGH_RISK_THRESHOLD=0.75
MEDIUM_RISK_THRESHOLD=0.45
